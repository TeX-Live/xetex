\newcommand{\foreignlanguage}[3][]{%
   \ifcsundef{#2@loaded}{\xpg@nolang{#2}\hyphenrules{#2}}{%
     {\def\languagename{#2}%
      \setkeys{#2}{#1}%
      \xpg@csifdef@warn{#2@font}%
      \xpg@csifdef@warn{#2@language}%
      \xpg@csifdef{date#2}%
      \xpg@csifdef{#2@numbers}%
      \use@localhyphenmins{#2}%
      \xpg@csifdef{inlineextras@#2}%
      #3}%
}}

