#!/bin/sh
# Public domain.  Originally written 1994, Karl Berry.
	
temp=${TMPDIR-/tmp}/ait.$$

echo Contents: >$temp
echo >>$temp

awk '
	{ prevline = line; line = $0 }
/^\*+$/	{ print prevline }
/^=+$/	{ print "  " prevline }
/^-+$/	{ print "    " prevline }
/^\.+$/	{ print "      " prevline }
' $*>>$temp

echo >>$temp
echo >>$temp
cat $* >>$temp

mv $temp $1
